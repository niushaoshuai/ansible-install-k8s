
{% set local_ip = inventory_hostname %}

#[Member]
ETCD_NAME="{{ etcd_name }}"
ETCD_DATA_DIR="/var/lib/etcd/default.etcd"
ETCD_LISTEN_PEER_URLS="https://{{ local_ip }}:2380"
ETCD_LISTEN_CLIENT_URLS="https://{{ local_ip }}:2379,http://127.0.0.1:2379"

#[Clustering]
ETCD_INITIAL_ADVERTISE_PEER_URLS="https://{{ local_ip }}:2380"
ETCD_ADVERTISE_CLIENT_URLS="https://{{ local_ip }}:2379,http://127.0.0.1:2379"
{#获取主机组变量#}
ETCD_INITIAL_CLUSTER="{% for host in groups['etcd'] %}{{ hostvars[host].etcd_name }}=https://{{ hostvars[host].inventory_hostname }}:2380{% if not loop.last %},{% endif %}{% endfor %}"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_ENABLE_V2="true"

#[Security]
ETCD_CERT_FILE="{{ etcd_work_dir }}/ssl/server.pem"
ETCD_KEY_FILE="{{ etcd_work_dir }}/ssl/server-key.pem"
ETCD_TRUSTED_CA_FILE="{{ etcd_work_dir }}/ssl/ca.pem"
ETCD_CLIENT_CERT_AUTH="true"
ETCD_PEER_CERT_FILE="{{ etcd_work_dir }}/ssl/server.pem"
ETCD_PEER_KEY_FILE="{{ etcd_work_dir }}/ssl/server-key.pem"
ETCD_PEER_TRUSTED_CA_FILE="{{ etcd_work_dir }}/ssl/ca.pem"
ETCD_PEER_CLIENT_CERT_AUTH="true"

